<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/backgroundGrey">


    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        android:padding="16dp"
        tools:layout_editor_absoluteX="0dp"
        tools:layout_editor_absoluteY="148dp"
        android:layout_margin="20dp">

        <TextView
            android:id="@+id/contact_form_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:layout_marginBottom="16dp"
            android:fontFamily="@font/palanquin_dark"
            android:text="Sign Up"
            android:textColor="@color/MenuClickedWhite"
            android:textSize="36sp"
            android:textStyle="bold"
            android:typeface="serif" />

        <EditText
            android:id="@+id/register_username"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:backgroundTint="@color/backgroundMenu"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:layout_marginTop="50dp"
            android:hint="Username"
            android:textSize="14sp"
            android:textColorHint="@color/backgroundMenu"
            android:inputType="textNoSuggestions"
            android:textCursorDrawable="@drawable/cursor_wine"/>

        <EditText
            android:id="@+id/register_password"
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp"
            android:backgroundTint="@color/backgroundMenu"
            android:hint="Password"
            android:textColorHint="@color/backgroundMenu"
            android:inputType="textPassword"
            android:textSize="14sp"
            android:paddingLeft="10dp"
            android:paddingBottom="15dp"
            android:textCursorDrawable="@drawable/cursor_wine"/>


        <Button
            android:id="@+id/register_button"
            android:layout_width="match_parent"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="15dp"
            android:background="@color/backgroundMenu"
            android:fontFamily="sans-serif-medium"
            android:text="@string/submit"
            android:textColor="@color/MenuClickedWhite"
            android:textSize="12sp" />

        <Button
            android:id="@+id/signin_button"
            android:layout_width="200dp"
            android:layout_height="40dp"
            android:layout_gravity="center_horizontal"
            android:layout_marginTop="5dp"

            android:background="@android:color/transparent"
            android:fontFamily="sans-serif-medium"
            android:text="Already have an account? Sign In here"
            android:textColor="@color/MenuClickedWhite"
            android:textSize="8sp" />
    </LinearLayout>




</android.support.constraint.ConstraintLayout>